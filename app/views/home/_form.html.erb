<%= form_for @person do |f| %>
<div class="field">
	<%= f.hidden_field :user_id, :value => current_user.id %>
</div>

		<p>
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :last_name %><br />
			<%= f.text_field :last_name %>
		</p>

		<p>
			<%= f.label :sex %>
			<%= f.collection_select :sex, Person::SEXS, :to_s, :titleize %>
		</p>

		<p>
			<%= f.label :birthday %><br />
			<%= f.date_select  :birthday, :start_year => 1920 %> 

		</p>

		<p>
			<%= f.label :cell_number %><br />
			<%= f.text_field :cell_number %>
		</p>

		<p>
			<%= f.label :city %><br />
			<%= f.text_field :city %>
		</p>

		<p>
			<%= f.label :address  %><br />
			<%= f.text_field :address %>
		</p>

	    <%= f.hidden_field :type_person, :value => current_user.role_user %>

		<%= button_submit_tag 'Submit' %>

<% end %>
